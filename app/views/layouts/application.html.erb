<!DOCTYPE html>
<html>
<head>
  <title>Juicee! | <%= @title %></title>
  <%= stylesheet_link_tag "default", "application", :cache => false %>
  <%= javascript_include_tag "application", :cache => false %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

	<div class="top">
		<a href="#"><span>Juicee!</span></a>
	</div>

	<div class="header"></div>

	<div class="main">

		<div class="item">
			<div class="content">
				<div class="body">
				<% flash.each do |key, value| %>
				        <div class="flash <%= key %>"><%= value %></div>
                    <% end %>
					<%= yield %>
				</div>
			</div>
		</div>
	</div>
	<div class="navigation">

		<h1>Navigation</h1>
		<ul>
			<li><%= link_to 'Create bookmark', new_bookmark_path %></li>
			<li><%= link_to 'View bookmarks', bookmarks_path %></li>
		</ul>
	</div>
</div>
</body>
</html>
